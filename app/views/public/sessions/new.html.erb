<div class="container">
  <div class="row">
    <div class= "h5 bg-secondary mt-5">ログイン</div>

  </div>

    <div class="col-lg-11 offset-lg-1">

       <div class="mt-3"><span class="bg-secondary">会員の方はこちらからログイン</span></div>
    </div>

    <%= form_with model: @customer, url: customer_session_path do |f| %>
    <table class="col-lg-7 offset-5 mt-4 d-block mx-auto">

        <tr>
          <td class="col-lg-3 m-3"><%= f.label :"メールアドレス" %></th>
          <td><%= f.email_field :email, :size=>"50", autofocus: true, autocomplete: "email", class:"form-control mx-auto" %></td>
        </tr>

        <tr>
          <td class="col-lg-3"><%= f.label :"パスワード" %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %></th>
          <td><%= f.password_field :password, :size=>"50", autocomplete: "new-password", class:"form-control mx-auto" %></td>
        </tr>

        <tr>
          <th></th>
          <td><%= f.submit "ログイン", class:"btn btn-primary mt-5"%></td>
        </tr>
        </table>
        <% end %>

        <div class="col-lg-11 offset-lg-1 mt-3">

          <div class="mt-5"><span class="bg-secondary">会員登録がお済みでない方</span></div>
          <p class="m-4"><%= link_to "こちら",  new_customer_registration_path %>から新規登録を行ってください。</p>
       </div>
</div>



