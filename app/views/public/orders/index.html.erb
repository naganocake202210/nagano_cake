<div class="container">
  <div class= "row">
    <div class= "h5 bg-secondary mt-5">
       注文履歴一覧
    </div>
  </div>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th class="col-lg-1">注文日</th>
        <th class="col-lg-5">配送先</th>
        <th class="col-lg-2">注文商品</th>
        <th class="col-lg-2">支払金額</th>
        <th class="col-lg-2">注文詳細</th>
      </tr>
    </thead>

    <tbody>


      <tr>
        <% @orders.each do |order| %>
        <td class="col-lg-1"><%= order.created_at.strftime('%Y/%m/%d') %></td>
        <td class="col-lg-5"><%= order.postal_code %><br>
            <%= order.address %><br>
            <%= order.name %></td>

        <td class="col-lg-2">
          <% @order_details = order.order_details %>
        <% @order_details.each do |order_detail| %>
            <%= order_detail.item.name %><br>
        <% end %>
        </td>

        <td class="col-lg-2"><%= converting_to_jpy(order.total_payment) %></td>
        <td class="col-lg-2"><%= link_to "表示する", order_path(order.id), class: "btn btn-sm btn-primary" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>


</div>






