<div class="container">
  <div class= "row">
    <div class= "h5 bg-secondary mt-5">
      注文履歴詳細
    </div>
  </div>

  <div class="row">
  <div class="col-lg-7">
    <div class="h6 mt-3 font-weight-bold">注文情報</div>

    <table class="table-bordered">
      <tr>
        <th class="col-lg-2">注文日</th>
        <td class="col-lg-5"><%= @order.created_at.strftime('%Y/%m/%d') %></td>
      </tr>
      <tr>
        <th class="col-lg-2">配送先</th>
        <td class="col-lg-5"><%= @order.postal_code %><br>
            <%= @order.address %><br>
            <%= @order.name %></td>
      </tr>
      <tr>
        <th class="col-lg-2">支払方法</th>
        <td class="col-lg-5"><%= @order.payment_method_i18n %></td>
      </tr>
    </table>
  </div>

  <div class="col-lg-3">
    <div class="h6 mt-3 font-weight-bold">請求金額</div>

    <table class="table-bordered">
      <tr>
        <th class="col-lg-2">商品合計</th>
        <td class="col-lg-1"><%= @order.total_payment.to_s(:delimited) %></td>
      </tr>
      <tr>
        <th class="col-lg-2">配送料</th>
        <td class="col-lg-1"><%= @order.postage.to_s(:delimited) %></td>
      </tr>
      <tr>
        <th class="col-lg-2">ご請求額</th>
        <td class="col-lg-1"><%= (@order.total_payment + @order.postage).to_s(:delimited) %></td>
      </tr>
    </table>
  </div>
  </div>

  <div class="row">
    <div class="col-lg-9">
    <div class="h6 mt-3 font-weight-bold">注文内容</div>
    <table class="table-bordered">
      <thead>
        <tr>
          <th class="col-lg-5">商品</th>
          <th class="col-lg-2">単価（税込）</th>
          <th class="col-lg-1">個数</th>
          <th class="col-lg-1">小計</th>
        </tr>
      </thead>
      <tbody>
        <% @order.order_details.each do |order_detail| %>
        <tr>
          <td><%= order_detail.item.name %></td>
          <td><%= order_detail.item.with_tax_price.to_s(:delimited) %></td>
          <td><%= order_detail.amount %></td>
          <td><%= (order_detail.item.with_tax_price * order_detail.amount).to_s(:delimited) %></td>
        </tr>
       <% end %>
      </tbody>
  </table>
 </div>
 </div>



</div>



