<div class="container">
  <div class= "row">
    <div class= "h5 mt-5 col-lg-8">
       <span class="bg-secondary">ショッピングカート</span></div>
    <div class= "col-lg-4 mt-5">
      <%= link_to "カートを空にする", destroy_all_path, method: :delete, class: "btn btn-sm btn-danger" %>
    </div>
  </div>

  <table class="mt-3 table-bordered col-lg-12">
    <thead>
      <tr>
        <th class="col-lg-5">商品名</th>
        <th class="col-lg-2">単価（税込）</th>
        <th class="col-lg-1">数量</th>
        <th class="col-lg-1">小計</th>
        <th class="col-lg-1"></th>
      </tr>
    </thead>

    <tbody>
      <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= cart_item.item.name %></td>
        <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
        <td><%= cart_item.amount %></td>
        <td><%= cart_item.subtotal.to_s(:delimited) %></td>
        <td class="d-flex justify-content-center"><%= link_to "削除する", cart_item_path(cart_item), method: :delete, class: "btn btn-sm btn-danger" %></td>
      </tr>
     </tbody>
    <% @total += cart_item.subtotal %>
    <% end %>
  </table>

  <div class= "row col-lg-12">
  <div class="col-lg-6 offset-1 mt-5"><%= link_to "買い物を続ける", root_path, class: "btn btn-sm btn-primary" %></div>

  <table class="mt-5 table-bordered col-lg-3">
    <tr>
      <td>合計金額</td>
      <td><%= @total.to_s(:delimited) %></td>
    </tr>

  </table>
  </div>

  <div class= "row d-flex justify-content-center mt-5">

    <%= link_to "情報入力に進む",  new_order_path, class: "btn btn-sm btn-success" %>
  </div>

</div>





