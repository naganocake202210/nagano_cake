<div class="container">
  <div class="row">
    <div class= "h5 bg-secondary mt-5">商品新規登録</div>
    <div><% if @item.errors.any? %>
      <p>すべての項目を入力してください。</p>
    <% end %>
    </div>
    </div>

    <div class="row">
      <div class="col-lg-3"></div>

      <div class="col-lg-9">

    <%= form_with model: @item, url: admin_items_path, method: :post do |f| %>

    <table>
      <tr>
        <td>商品画像</td>
        <td><%= f.file_field :image, accept: "image/*" %></td>
      </tr>

      <tr>
        <td>商品名</td>
        <td><%= f.text_field :name, :size=>"30", class:"form-control mx-auto" %></td>
      </tr>

      <tr>
        <td>商品説明</td>
        <td><%= f.text_area :introduction,:size=>"30x8", class:"form-control mx-auto" %></td>
      </tr>

      <tr>
        <td>ジャンル</td>
        <td><%= f.collection_select(:genre_id, Genre.all, :id, :name) %></td>
      </tr>

      <tr>
        <td>税抜価格</td>
        <td><%= f.text_field :price, :size=>"30", class:"form-control mx-auto" %></td>
      </tr>

      <tr>
        <td>販売ステータス</td>
        <td><%= f.radio_button :checked, :true %>
            <%= f.label :checked, "販売中" %>
            <%= f.radio_button :checked, :false %>
            <%= f.label :checked, "販売停止中" %>
        </td>
      </tr>

      <tr>
        <td></td>
        <td><%= f.submit "新規登録", class:"btn btn-success"%></td>
      </tr>
    </table>



  <% end %>
  </div>
 </div>
</div>