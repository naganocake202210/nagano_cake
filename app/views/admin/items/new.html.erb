<h1>商品新規投稿</h1>

<%= form_with model: @item, url: admin_items_path, method: :post do |f| %>

  <h4>商品画像</h4>
  <%= f.file_field :image, accept: "image/*" %>

  <h4>商品名</h4>
  <%= f.text_field :name %>

  <h4>商品説明</h4>
  <%= f.text_area :introduction %>

  <h4>ジャンル</h4>
  <%= f.collection_select(:genre_id, Genre.all, :id, :name) %>

  <h4>税抜価格</h4>
  <%= f.text_field :price %>

  <h4>販売ステータス</h4>
  <%= f.radio_button :checked, :true %>
  <%= f.label :checked, "販売中" %><br />
  <%= f.radio_button :checked, :false %>
  <%= f.label :checked, "販売停止中" %><br />

  <%= f.submit '新規登録' %>

<% end %>
