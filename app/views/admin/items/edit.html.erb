<div class= "container">
  <div class= "row">

<h4>商品編集</h4>


<%= form_with model: @item, url: admin_item_path(@item.id), method: :patch do |f| %>

  <p>商品画像</p>
   <%= f.file_field :image, accept: "image/*" %>
  <p>商品名</p>
  <%= f.text_field :name %>

  <p>商品説明</p>
  <%= f.text_area :introduction %>

  <p>ジャンル</p>
  <%= f.collection_select(:genre_id, Genre.all, :id, :name) %>

  <p>税抜価格</p>
  <%= f.text_field :price %>

  <p>販売ステータス</p>
  <%= f.radio_button :checked, :true %>
  <%= f.label :checked, "販売中" %><br />
  <%= f.radio_button :checked, :false %>
  <%= f.label :checked, "販売停止中" %><br />

  <%= f.submit '変更を保存' %>

<% end %>

</div>
</div>


