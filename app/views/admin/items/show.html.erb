<div class="container">
 <div class="row">
  <div class= "h5 bg-secondary mt-5">商品詳細</div>
 </div>

 <div class="row mt-5">
  <div class="col-lg-4">
   <%= image_tag @item.get_image(400,400) %>
  </div>

  <div class="col-lg-8">
   <table>
     <tr>
       <th>商品名</th>
       <td><%= @item.name %></td>
     </tr>

     <tr>
       <th>商品説明</th>
       <td><%= @item.introduction %></td>
     </tr>

     <tr>
       <th>ジャンル</th>
       <td><%= @item.genre.name %></td>
     </tr>

     <tr>
       <th>税込価格（税抜価格）</th>
       <td><%= @item.with_tax_price.to_s(:delimited) %>（<%= converting_to_jpy(@item.price) %>）</td>
     </tr>

     <tr>
       <th>販売ステータス</th>
       <td>
          <%= @item.display_is_active %>
       </td>
      </tr>
   </table>



   <%= link_to "編集する", edit_admin_item_path(@item.id), class: 'btn btn-success mt-5' %>
  </div>


 </div>
</div>


